<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".globalactivities.PharmacistAttendanceActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Click to view attendance summary"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp"
            android:id="@+id/view_attendance_summary"
            android:padding="10dp"/>

        <include layout="@layout/layout_attendance_summary"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/attendance_sessions_recycler"
            android:layout_marginTop="20dp"
            android:scrollbars="vertical"/>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>