<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fitsSystemWindows="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".globalactivities.ForumPostActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:id="@+id/top_forum_post_navbar"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimary">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Cancel"
            android:id="@+id/cancel_forum"
            android:layout_weight="1"
            android:paddingStart="10dp"
            android:textColor="@color/white"
            android:gravity="center|start"
            android:textSize="20sp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Post"
            android:id="@+id/post_forum"
            android:layout_weight="1"
            android:paddingEnd="10dp"
            android:textColor="@color/white"
            android:gravity="center|end"
            android:textSize="20sp"/>

    </LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:layout_above="@id/bottom_forum_post_navbar"
        android:layout_below="@id/top_forum_post_navbar"
        android:padding="5dp"
        android:hint="Forum Title"
        android:gravity="top"
        android:id="@+id/forum_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="10dp"
        android:orientation="horizontal"
        android:id="@+id/bottom_forum_post_navbar"
        android:background="@color/colorPrimary"
        android:layout_alignParentBottom="true">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/picture_imageview"
            android:src="@drawable/picture_white"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/document_imageview"
            android:src="@drawable/document_white"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/poll_imageview"
            android:src="@drawable/poll_white"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/count_text"
            android:gravity="center"
            android:textSize="20sp"
            android:text="0 / 380"
            android:textColor="@color/white"/>

    </LinearLayout>

</RelativeLayout>