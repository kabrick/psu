<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/edit_news"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context=".globalactivities.EditNewsActivity">

    <LinearLayout
        android:background="@color/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">

        <EditText
            android:layout_weight="0.3"
            android:inputType="text"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            android:hint="News Title"
            android:id="@+id/news_title_edit"
            android:layout_height="0dp" />

        <EditText
            android:layout_weight="2"
            android:id="@+id/news_text_edit"
            android:layout_width="match_parent"
            android:inputType="textMultiLine"
            android:hint="Add news here"
            android:gravity="top"
            android:layout_height="0dp" />

        <Button
            android:layout_marginTop="10dp"
            android:layout_weight="0.3"
            android:text="Post News"
            android:onClick="postNews"
            android:background="@color/colorAccent"
            android:layout_width="match_parent"
            android:layout_height="0dp" />

    </LinearLayout>

</RelativeLayout>