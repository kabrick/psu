<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/edit_news"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context=".globalactivities.EditNewsActivity">

    <LinearLayout
        android:background="@color/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">

        <android.support.design.widget.TextInputLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp">

            <EditText
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_marginBottom="10dp"
                android:id="@+id/news_title_edit"
                android:hint="Title"
                android:layout_height="wrap_content" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp">

            <EditText
                android:id="@+id/news_text_edit"
                android:layout_width="match_parent"
                android:inputType="textMultiLine"
                android:gravity="top"
                android:hint="Text"
                android:layout_height="wrap_content" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp">

            <EditText
                android:id="@+id/news_source_edit"
                android:layout_width="match_parent"
                android:inputType="textMultiLine"
                android:gravity="top"
                android:hint="Source"
                android:layout_height="wrap_content" />

        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

    <Button
        android:layout_marginTop="10dp"
        android:text="Edit News"
        android:onClick="postNews"
        android:background="@color/colorAccent"
        android:layout_width="match_parent"
        android:textColor="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content" />

</RelativeLayout>